  "author": "alanmarcell@live.com",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.18.3",
    "cors": "^2.8.4",
    "express": "^4.16.3",
    "mongodb": "^3.1.0-beta4",
    "ramda": "^0.25.0",
    "request": "^2.87.0",
    "request-promise-native": "^1.0.5",
    "uuid": "^3.2.1"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-es2015-native-generators": "^6.6.0",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.12.0",
    "nodemon": "^1.17.5",
    "rimraf": "^2.6.2"
  },
  "nodemonConfig": {
    "ignore": [
      "data/*"
    ]
  }
